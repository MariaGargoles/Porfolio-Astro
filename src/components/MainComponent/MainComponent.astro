---
import DynamicTextComponent from "../../components/DynamicTextComponet/dynamictext.astro";
import foto from "../../../public/assets/imagencompleta.jpg";
---

<main
  class="flex items-start justify-center w-full min-h-screen pt-10 px-6 mt-24"
>
  <div class="w-1/2 text-center px-4">
    <h2 class="text-2xl font-bold mb-4">Junior FullStack Developer</h2>
    <DynamicTextComponent />
  </div>
  <div class="w-1/2 text-center px-4">
    <img
      src={foto.src}
      alt="imagen maria gargoles"
      class="rounded-full mx-auto w-1/5"
    />
  </div>
</main>
